<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/vdTv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 min meditation for anxiety" />

            <WebView
                android:id="@+id/wv1"
                android:layout_width="match_parent"
                android:layout_height="300dp" >

            </WebView>

            <TextView
                android:id="@+id/vdTv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 min meditation for stress" />

            <WebView
                android:id="@+id/wv2"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/vdTv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 min meditation for depression" />

            <WebView
                android:id="@+id/wv3"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>